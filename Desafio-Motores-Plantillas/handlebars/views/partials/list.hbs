{{#if products.length}}

{{#each products }}
 <table>
  <tr>
    <th>Producto</th>
    <th>Precio</th>
    <th>Imagen</th>
  </tr>
  <tr>
    <td>{{this.title}}</td>
    <td>{{this.precio}}</td>
    <td><img src="{{this.thumbnail}}" width="50px"/></td>
  </tr>
</table> 
{{/each}}

{{else}}
<h2>No hay productos</h2>

{{/if}}
